<% provide(:title, "Contact") %>
<header class="page-header">
  <h1 class="text-center">Contact Us<br>
    <small class="h5">Leave us a message.</small>
  </h1>
</header>
<article>
  <%= form_tag("/static_pages/thank_you") do %>
      <div class="row text-center">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
          <div class="form-group">
            <%= label_tag :name, "Name" %>
            <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", required: true %>
          </div>
          <div class="form-group">
            <%= label_tag :email, "Email Address" %>
            <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", required: true %>
          </div>
          <div class="form-group">
            <%= label_tag :message, "Message" %>
            <%= text_area_tag :message, nil, class: "form-control", rows: "5", placeholder: "Enter Message", required: true %>
          </div>
          <%= submit_tag "Send", class: "btn btn-default" %>
        </div>
      </div>
  <% end %>
</article>