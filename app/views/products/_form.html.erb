<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> stopped us from saving this product:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class:"form-control", required: true %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, rows: "8",class: "form-control", required: true %>
    </div>
    <div class="field">
      <%= f.label :image_url %><br>
      <%= f.text_field :image_url, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :color %><br>
      <%= f.text_field :color, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :price %><br>
      <%= f.number_field :price, class: "text-field form-control", step: 'any', pattern: '(^\d*\.?\d*[1-9]+\d*$)|(^[1-9]+\d*\.\d*$)' %>
    </div>
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-default" %>
    </div>

  </div>
<% end %>
